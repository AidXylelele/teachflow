{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/auth": "<rootDir>/../libs/auth/src",
    "@app/auth/(.*)": "<rootDir>/../libs/auth/src/$1",
    "@app/cls": "<rootDir>/../libs/cls/src",
    "@app/cls/(.*)": "<rootDir>/../libs/cls/src/$1",
    "@app/cqs": "<rootDir>/../libs/cqs/src",
    "@app/cqs/(.*)": "<rootDir>/../libs/cqs/src/$1",
    "@app/ddd": "<rootDir>/../libs/ddd/src",
    "@app/ddd/(.*)": "<rootDir>/../libs/ddd/src/$1",
    "@app/otel": "<rootDir>/../libs/otel/src",
    "@app/otel/(.*)": "<rootDir>/../libs/otel/src/$1"
  }
}